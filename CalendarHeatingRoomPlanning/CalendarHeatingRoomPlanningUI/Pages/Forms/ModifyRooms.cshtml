@page
@model CalendarHeatingRoomPlanningUI.Pages.Forms.ModifyRoomsModel
@{
    ViewData["Title"] = " Specified Rooms";
}

<h1>Specified Rooms</h1>
@{ int counter = 1; }
<form method="post">
    <button asp-page="/Forms/AddRoom" class="btn btn-outline-primary btn-sm">Add Room</button>
</form>
<table style="width:100%">
    <tbody>
        <tr>
            <td>#</td>
            <td>Id</td>
        </tr>
        @if ((Model.Rooms != null) && (Model.Rooms.RoomData.Count > 0))
        {
            @foreach (CalendarHeatingRoomPlanning.SingleRoom singleRoom in Model.Rooms.RoomData)
            {
                <tr>
                    <td>@counter</td>
                    <td>@singleRoom.ID</td>
                </tr>
                counter++;
            }
        }
    </tbody>
</table>
