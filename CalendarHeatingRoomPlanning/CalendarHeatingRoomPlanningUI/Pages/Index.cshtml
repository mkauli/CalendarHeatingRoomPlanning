@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <p>Welcome to the Site to heating control &amp; manage of the Harmonie Room planning.</p>
</div>

<div>
    @Model.Message
</div>
<form method="post">
    @{
        if (!Authentification.Instance.IsAuthentificated(HttpContext))
        {
            <div class="form-group">
                <label asp-for="UserName" class="col-form-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="UserName" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-form-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Password" />
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-outline-primary btn-sm">Log in</button>
            </div>
        }
        else
        {
            <div class="form-group">
                <button class="btn btn-outline-primary btn-sm">Log Out</button>
            </div>
        }
    }
</form>